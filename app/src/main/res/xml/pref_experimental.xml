<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="tweak_k920cardboard"
        android:title="K920 Cardboard Resolution Fix"
        android:summary="For K920 running Android 4.4/5.0" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="tweak_gmswearnotificationdisable"
        android:title="Disable Wear Disconnected Notification"
        android:summary="For Google Play services 8.4.89" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="tweak_chrometabstoolbaronphone"
        android:title="Chrome Tabs Toolbar On Phone"
        android:summary="For Chrome (v47-49 only)" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="tweak_deskclockalarm"
        android:title="Desk Clock Alarm [Obsolete]"
        android:summary="Make Alarm the default tab in stock/Google Desk Clock (v4.2.1/4.3)" />

</PreferenceScreen>
